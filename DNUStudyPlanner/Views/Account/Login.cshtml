@model DNUStudyPlanner.Models.LoginViewModel
@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Đăng nhập - DNU Study Planner</title>
    <style>
        body {
            background: url("/images/awvhf0v6rp9vsfk4l4gi20230717030908_thump.jpg") no-repeat center center;
            background-size: cover;
            font-family: Arial, sans-serif;
            text-align: center;
        }
    </style>
</head>
<body>
<header>
    <div class="header-container">
        <div><img class="loGoDaiNam" src="/images/dainam.png" alt="Logo Đại Nam" /></div>
        <div>
            <h1 class="fw-bold">HỌC TẬP THÔNG MINH VÀ CHINH PHỤC MỤC TIÊU <br/> <span style="color:red">DNU STUDY PLANNER</span></h1>
        </div>
    </div>
</header>

<div class="login-container fw-bold">
    <form asp-action="Login" method="post">
        <h2 class="fw-bold">ĐĂNG NHẬP</h2>

        

        <div>
            <label>Email</label>
            <input type="email" asp-for="Email" placeholder="Nhập email..."/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div>
            <label>Mật khẩu</label>
            <input type="password" asp-for="Password" placeholder="Nhập mật khẩu..."/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="checkbox-container">
            <input type="checkbox" asp-for="RememberMe" id="rememberMe" />
            <label for="rememberMe">Ghi nhớ đăng nhập</label>
        </div>
       
        <div class="button-group">
            <button type="submit" class="btn-login">Đăng nhập</button>
            <a href="/Account/Register" class="btn-register">Đăng ký</a>
        </div>

        <div class="forgot-password">
            <a href="/Account/ForgotPassword">Quên mật khẩu</a>
        </div>
    </form>
</div>

</body>
</html>