@model DNUStudyPlanner.Models.RegisterViewModel
@{
    Layout = "_Layout"; // Hoặc null nếu bạn không dùng layout chung
    ViewData["Title"] = "Đăng ký";
}

@section Styles {
    <link rel="stylesheet" href="~/css/register.css" /> 
}

<header>
    <div class="header-container">
        <div><img class="loGoDaiNam" src="/images/dainam.png" alt="Logo Đại Nam" /></div>
        <div>
            <h1>HỌC TẬP THÔNG MINH VÀ CHINH PHỤC MỤC TIÊU <br/><span style="color:red">DNU STUDY PLANNER</span></h1>
        </div>
    </div>
</header>

<div class="register-container">
    <h2>ĐĂNG KÝ</h2>
    
    <form asp-controller="Account" asp-action="Register" method="post">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-row">
            <div class="form-column">
                <div>
                    <label asp-for="Email"></label>
                    <input type="email" asp-for="Email" placeholder="Nhập email..."/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Password">Mật khẩu</label>
                    <input type="password" asp-for="Password" placeholder="Nhập mật khẩu..."/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
                    <input type="password" asp-for="ConfirmPassword" placeholder="Nhập lại mật khẩu..."/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-column">
                <div>
                    <label asp-for="FullName">Họ và tên</label>
                    <input type="text" asp-for="FullName" placeholder="Nhập họ và tên..."/>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="DateOfBirth">Ngày sinh</label>
                    <input type="date" asp-for="DateOfBirth"/>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                
                <div>
                    <label asp-for="Major">Chuyên ngành</label>
                    <input type="text" asp-for="Major" placeholder="Nhập chuyên ngành..."/>
                    <span asp-validation-for="Major" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="checkbox-container">
            <input type="checkbox" id="terms" name="terms" required/>
            <label for="terms">Tôi đồng ý với các điều khoản dịch vụ</label>
        </div>

        <div class="button-group">
            <button type="submit" class="btn-register">Đăng ký</button>
            <a href="@Url.Action("Login", "Account")" class="btn-cancel">Hủy</a>
        </div>
    </form>
</div>