@model DNUStudyPlanner.Models.EditUserViewModel
@{ Layout = null; ViewData["Title"] = "Chỉnh sửa Người dùng"; }

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/createplan.css" /> </head>
<body>
<div class="sidebar"> ... </div> <div class="main-content">
    <header class="main-header"><h1>@ViewData["Title"]</h1></header>
    <form asp-action="Edit" method="post" class="plan-form">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="FullName">Họ và tên</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Major">Chuyên ngành</label>
            <input asp-for="Major" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Role">Vai trò</label>
            <input asp-for="Role" class="form-control" />
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <div class="button-group">
            <a href="@Url.Action("Index")" class="btn-cancel">Hủy</a>
            <button type="submit" class="btn-save">Cập nhật</button>
        </div>
    </form>
</div>
</body>
</html>